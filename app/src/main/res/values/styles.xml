<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->fragment replace scroll
        <item name="colorPrimary">@color/colorOhneulen</item>
        <item name="colorPrimaryDark">@color/colorWhite</item>
        <item name="colorAccent">@color/colorWhite</item>

        <!-- No Title Bar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:windowLightStatusBar">true</item>
        <item name="android:splitMotionEvents">false</item>
        <item name="android:windowEnableSplitTouch">false</item>

    </style>

    <style name="starRatingBarM" parent="Widget.AppCompat.RatingBar">

        <item name="android:progressDrawable">@drawable/custom_ratingbar</item>
    </style>

    <style name="starRatingBarS" parent="Widget.AppCompat.RatingBar">

        <item name="android:progressDrawable">@drawable/custom_ratingbar_small</item>
    </style>

    <style name="starRatingBarL" parent="Widget.AppCompat.RatingBar">

        <item name="android:progressDrawable">@drawable/custom_ratingbar_large</item>
    </style>

    <style name="image_dialog" parent="android:Theme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="tablayout_textapperance" parent="Widget.Design.TabLayout">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorCGrey</item>
    </style>


</resources>
