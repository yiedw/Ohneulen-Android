<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->fragment replace scroll
        <item name="colorPrimary">@color/colorOhneulen</item>
        <item name="colorPrimaryDark">@color/colorWhite</item>
        <item name="colorAccent">@color/colorCursor</item>
<!--        <item name="android:textCursorDrawable">@color/colorCursor</item>-->

        <!-- No Title Bar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:windowLightStatusBar">true</item>
        <item name="android:splitMotionEvents">false</item>
        <item name="android:windowEnableSplitTouch">false</item>

        <item name="android:textViewStyle">@style/textViewStyle</item>
        <item name="android:buttonStyleToggle">@style/toggleButtonStyle</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="textViewStyle">
        <item name="android:textSize">14dp</item>
    </style>

    <style name="toggleButtonStyle">
        <item name="android:textSize">14dp</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="selectable">true</item>
        <item name="android:checkable">true</item>
    </style>

    <style name="starRatingBarM" parent="Widget.AppCompat.RatingBar">

        <item name="android:progressDrawable">@drawable/custom_ratingbar</item>
    </style>

    <style name="starRatingBarS" parent="Widget.AppCompat.RatingBar">

        <item name="android:progressDrawable">@drawable/custom_ratingbar_small</item>
    </style>

    <style name="starRatingBarL" parent="Widget.AppCompat.RatingBar">

        <item name="android:progressDrawable">@drawable/custom_ratingbar_large</item>
    </style>

    <style name="image_dialog" parent="android:Theme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="tablayout_textapperance" parent="Widget.Design.TabLayout">
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@color/colorCGrey</item>
    </style>




</resources>
