<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools">

    <data>

        <variable
            name="fragment"
            type="com.goodchoice.android.ohneulen.ui.search.SearchFilter" />

        <variable
            name="viewModel"
            type="com.goodchoice.android.ohneulen.ui.search.SearchViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/search_filter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorHeader">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/search_filter_choice"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/background_new"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="8dp"
                android:background="@drawable/background_rounding_filter">

                <TextView
                    android:id="@+id/search_filter_food"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/background_rounding_filter_select"
                    android:gravity="center"
                    android:onClick="@{fragment::onFoodClick}"
                    android:text="음식 선택"
                    android:textColor="@color/colorOhneulen"
                    android:textSize="@dimen/main_contents"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/search_filter_options" />

                <TextView
                    android:id="@+id/search_filter_options"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:onClick="@{fragment::onOptionsClick}"
                    android:text="옵션 선택"
                    android:textColor="@color/colorCGrey"
                    android:textSize="@dimen/main_contents"
                    app:layout_constraintLeft_toRightOf="@id/search_filter_food"
                    app:layout_constraintRight_toRightOf="parent" />


            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/search_filter_mainRv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#dedede"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toTopOf="@id/search_filter_select"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/search_filter_subRv"
            app:layout_constraintTop_toBottomOf="@id/search_filter_choice"
            bind:categoryList="@{viewModel.mainCategory}"
            bind:filterAdapter="@{viewModel.mainCategoryAdapter}"
            bind:searchFilterViewModel="@{viewModel}" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/search_filter_subRv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@android:color/white"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="@id/search_filter_mainRv"
            app:layout_constraintLeft_toRightOf="@id/search_filter_mainRv"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/search_filter_mainRv"
            bind:categoryList="@{viewModel.subCategory}"
            bind:filterAdapter="@{viewModel.subCategoryAdapter}"
            bind:searchFilterViewModel="@{viewModel}" />

        <LinearLayout
            android:id="@+id/search_filter_select"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#666666"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@id/search_filter_reset"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/search_filter_subRv">


        </LinearLayout>


        <TextView
            android:id="@+id/search_filter_reset"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="#666666"
            android:focusable="true"
            android:gravity="center"
            android:text="초기화"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/search_filter_complete" />

        <TextView
            android:id="@+id/search_filter_complete"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#666666"
            android:focusable="true"
            android:gravity="center"
            android:text="선택완료"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/search_filter_reset"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/search_filter_reset" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>