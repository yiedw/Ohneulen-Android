<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="fragment"
            type="com.goodchoice.android.ohneulen.ui.store.home.StoreHomeFragment"/>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/store_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white">

        <TextView
            android:id="@+id/store_home_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="주소"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/store_home_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="전화"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/store_home_address" />

        <TextView
            android:id="@+id/store_home_business"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="영업일"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/store_home_call" />

        <TextView
            android:id="@+id/store_home_holiday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="휴무일"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/store_home_business" />

        <TextView
            android:id="@+id/store_home_break"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="브레이크타임"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/store_home_holiday" />

        <TextView
            android:id="@+id/store_home_delivery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="배달"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/store_home_break" />

        <TextView
            android:id="@+id/store_home_takeout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="포장"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/store_home_delivery" />

        <TextView
            android:id="@+id/store_home_parking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="주차"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/store_home_takeout" />

        <TextView
            android:id="@+id/store_home_reservation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="예약"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/store_home_parking"/>
        <TextView
            android:id="@+id/store_home_toilet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="화장실"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/store_home_reservation"/>

        <TextView
            android:layout_marginTop="20dp"
            android:id="@+id/store_home_content"
            android:text="설명"
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            app:layout_constraintTop_toBottomOf="@id/store_home_toilet"
            app:layout_constraintLeft_toLeftOf="parent"/>



        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="매장정보신고"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/store_home_content"
            android:onClick="@{fragment::submitClick}"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>