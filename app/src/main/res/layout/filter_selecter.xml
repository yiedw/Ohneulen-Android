<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/filter_selecter"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/background_border_black"
    android:padding="5dp">

    <TextView
        android:id="@+id/filter_select_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="어쩌구저쩌구"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="0dp"
        android:src="@drawable/circle_transparent"
        app:layout_constraintBottom_toBottomOf="@id/filter_select_title"
        app:layout_constraintLeft_toRightOf="@id/filter_select_title"
        app:layout_constraintTop_toTopOf="@id/filter_select_title" />

</androidx.constraintlayout.widget.ConstraintLayout>