<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="fragment"
            type="com.goodchoice.android.ohneulen.ui.mypage.MyPage" />

        <variable
            name="viewModel"
            type="com.goodchoice.android.ohneulen.ui.mypage.MyPageViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/mypage_info"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="30dp"
            android:background="@drawable/circle_transparent"
            android:focusable="true"
            android:onClick="@{fragment::infoClick}"
            android:src="@drawable/profile"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/mypage_nickName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:onClick="@{fragment::infoClick}"
            android:text="닉네임"
            android:textColor="@color/colorTextBlack"
            android:textSize="@dimen/main_contents"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@id/mypage_email"
            app:layout_constraintLeft_toRightOf="@id/mypage_info"
            app:layout_constraintTop_toTopOf="@id/mypage_info"
            app:layout_constraintVertical_chainStyle="packed" />

        <TextView
            android:id="@+id/mypage_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:onClick="@{fragment::infoClick}"
            android:text="yaa@naver.com"
            android:textColor="#808080"
            android:textSize="13sp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/mypage_info"
            app:layout_constraintLeft_toRightOf="@id/mypage_info"
            app:layout_constraintTop_toBottomOf="@id/mypage_nickName" />

        <TextView
            android:id="@+id/mypage_login"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginLeft="10dp"
            android:drawableRight="@drawable/more_point"
            android:gravity="center"
            android:onClick="@{fragment::infoClick}"
            android:text="로그인  "
            android:textColor="@color/colorTextBlack"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="@id/mypage_info"
            app:layout_constraintLeft_toRightOf="@id/mypage_info"
            app:layout_constraintTop_toTopOf="@id/mypage_info" />

        <View
            android:id="@+id/mypage_contour"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_marginTop="36dp"
            android:background="#f6f6f6"
            app:layout_constraintTop_toBottomOf="@id/mypage_info" />

        <LinearLayout
            android:id="@+id/mypage_linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/mypage_contour">

            <TextView
                android:id="@+id/mypage_good"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="20dp"
                android:drawableRight="@drawable/more_point"
                android:gravity="fill"
                android:onClick="@{fragment::goodClick}"
                android:text="@string/good"
                android:textColor="@color/colorTextBlack"
                android:textSize="@dimen/main_contents" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="10dp"
                android:background="@color/colorContour" />

            <TextView
                android:id="@+id/mypage_recentList"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginHorizontal="20dp"
                android:drawableRight="@drawable/more_point"
                android:gravity="fill"
                android:text="@string/recent_list"
                android:textColor="@color/colorTextBlack"
                android:textSize="@dimen/main_contents" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="10dp"
                android:background="@color/colorContour" />

            <TextView
                android:id="@+id/mypage_review"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginHorizontal="20dp"
                android:drawableRight="@drawable/more_point"
                android:focusable="true"
                android:gravity="fill"
                android:onClick="@{fragment::reviewClick}"
                android:text="@string/my_review"
                android:textColor="@color/colorTextBlack"
                android:textSize="@dimen/main_contents" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="10dp"
                android:background="@color/colorContour" />

            <TextView
                android:id="@+id/mypage_questions"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginHorizontal="20dp"
                android:drawableRight="@drawable/more_point"
                android:focusable="true"
                android:gravity="fill"
                android:onClick="@{fragment::inquireClick}"
                android:text="@string/inquiry_details"
                android:textColor="@color/colorTextBlack"
                android:textSize="@dimen/main_contents" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="10dp"
                android:background="@color/colorContour" />

            <TextView
                android:id="@+id/mypage_frequentlyQ"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginHorizontal="20dp"
                android:drawableRight="@drawable/more_point"
                android:focusable="true"
                android:gravity="fill"
                android:onClick="@{fragment::FAQClick}"
                android:text="@string/frequently_asked_questions"
                android:textColor="@color/colorTextBlack"
                android:textSize="@dimen/main_contents" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="10dp"
                android:background="@color/colorContour" />

        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#f6f6f6"
            android:paddingHorizontal="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/mypage_linearLayout">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal"
                app:layout_constraintBottom_toTopOf="@id/mypage_footer">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="19dp"
                    android:onClick="@{fragment::termsClick}"
                    android:text="이용약관"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" | "
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="19dp"
                    android:text="개인정보처리방침"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" | "
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="19dp"
                    android:onClick="@{fragment::companyClick}"
                    android:text="회사소개"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" | "
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="19dp"
                    android:onClick="@{fragment::contactusClick}"
                    android:text="사업제휴"
                    android:textSize="13sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/mypage_footer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:text="@string/footer"
                android:textColor="#88888888"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>