<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="290dp"
    android:layout_height="wrap_content"
    android:padding="20dp">

    <TextView
        android:id="@+id/logout_dialog_tv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="로그아웃"
        android:textColor="@color/colorBlack"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/logout_dialog_tv2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="지금 로그아웃 하시겠어요?"
        android:textColor="#777777"
        android:textSize="14dp"
        app:layout_constraintTop_toBottomOf="@id/logout_dialog_tv1" />

    <Button
        android:id="@+id/logout_dialog_cancel"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="6dp"
        android:background="@color/colorCGrey"
        android:stateListAnimator="@null"
        android:text="취소"
        android:textColor="@color/white"
        android:textSize="14dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/logout_dialog_ok"
        app:layout_constraintTop_toBottomOf="@id/logout_dialog_tv2" />

    <Button
        android:id="@+id/logout_dialog_ok"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/colorGreen"
        android:stateListAnimator="@null"
        android:text="확인"
        android:textColor="@color/white"
        android:textSize="14dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/logout_dialog_cancel"
        app:layout_constraintLeft_toRightOf="@id/logout_dialog_cancel"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/logout_dialog_cancel" />


</androidx.constraintlayout.widget.ConstraintLayout>