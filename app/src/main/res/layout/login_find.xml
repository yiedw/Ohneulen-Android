<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="fragment"
            type="com.goodchoice.android.ohneulen.ui.login.LoginFind" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="120dp">


        <TextView
            android:id="@+id/login_find_email"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:onClick="@{fragment::findEmailClick}"
            android:text="아이디"
            android:textAlignment="center"
            android:textColor="@color/colorOhneulen"
            android:textSize="24dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/login_find_pw"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/login_find_pw"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:onClick="@{fragment::findPwClick}"
            android:text="비밀번호"
            android:textSize="24dp"
            android:textColor="@color/colorCGrey"
            android:textAlignment="center"
            app:layout_constraintLeft_toRightOf="@id/login_find_email"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <FrameLayout
            android:id="@+id/login_find_frameLayout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/login_find_email" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>