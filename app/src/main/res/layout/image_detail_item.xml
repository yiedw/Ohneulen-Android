<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="photo"
            type="com.goodchoice.android.ohneulen.data.model.Photo" />


    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/image_detail_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="닫기"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView

            android:id="@+id/image_detail_image"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:src="@drawable/cafe_sample1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/image_detail_left"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/notifications_icon"
            app:layout_constraintBottom_toBottomOf="@id/image_detail_image"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@id/image_detail_image" />

        <ImageView
            android:id="@+id/image_detail_right"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/notifications_icon"
            app:layout_constraintBottom_toBottomOf="@id/image_detail_image"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/image_detail_image" />



    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>