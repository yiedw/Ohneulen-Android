<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="partnerMenu"
            type="com.goodchoice.android.ohneulen.model.PartnerMenu" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/partner_menu_item_image"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/cafe_sample1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/partner_menu_item_name"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="@{partnerMenu.name}"
            app:layout_constraintBottom_toTopOf="@id/partner_menu_item_price"
            app:layout_constraintLeft_toRightOf="@id/partner_menu_item_image"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/partner_menu_item_price"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="@{partnerMenu.price}"
            app:layout_constraintBottom_toTopOf="@id/partner_menu_item_origin"
            app:layout_constraintLeft_toRightOf="@id/partner_menu_item_image"
            app:layout_constraintTop_toBottomOf="@id/partner_menu_item_name" />

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/partner_menu_item_origin"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="@{partnerMenu.origin}"
            android:textSize="12sp"
            android:textColor="#979797"
            app:layout_constraintBottom_toBottomOf="@id/partner_menu_item_image"
            app:layout_constraintLeft_toRightOf="@id/partner_menu_item_image"
            app:layout_constraintTop_toBottomOf="@id/partner_menu_item_price" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>