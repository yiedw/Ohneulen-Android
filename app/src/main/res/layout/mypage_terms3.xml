<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <ScrollView
        android:id="@+id/mypage_terms3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="개인정보 수집 및 이용"
                android:textColor="@color/colorBlack"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="1. 수집하는 개인정보의 항목"
                android:textColor="@color/colorBlack"
                android:textSize="14dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="문의자명, 문의자 연락처, 문의자 이메일 주소"
                android:textColor="#777777"
                android:textSize="14dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="2. 개인정보의 수집 및 이용 목적"
                android:textColor="@color/colorBlack"
                android:textSize="14dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:justificationMode="inter_word"
                android:text="사업 제휴 검토, 보다 나은 서비스의 제공을 위한 파트너 관리 및 만족도 조사 및 주요 사항에 대한 고지를 목적으로 사용됩니다."
                android:textColor="#777777"
                android:textSize="14dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="3. 개인정보의 보유 및 이용기간"
                android:textColor="@color/colorBlack"
                android:textSize="14dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:justificationMode="inter_word"
                android:text="파트너님의 개인정보는 수집 및 이용목적 외의 용도로 이용되지 않으며, 관련 담당자를 제외하고는 함부로 열람할 수 없습니다.
\n파트너님의 개인정보는 동의 철회 시점까지 보관 됩니다."
                android:textColor="#777777"
                android:textSize="14dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="4. 기타"
                android:textColor="@color/colorBlack"
                android:textSize="14dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:justificationMode="inter_word"
                android:text="파트너님은 개인정보 수집 및 이용에 대한 동의를 거부할 수 있으며, 다만 이 경우 사업 제휴 문의는 불가능 합니다."
                android:textColor="#777777"
                android:textSize="14dp" />

        </LinearLayout>
    </ScrollView>
</layout>